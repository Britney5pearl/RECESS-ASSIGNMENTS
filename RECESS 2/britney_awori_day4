#Example 2
number = int(input("Enter a value:"))
product = number * 20
print(product)

#multiple inputs in python
e, f, g = map(int, input("Enter the numbers:").split())
print("The values are:", end = "")
print(e, f, g)

#How to capture input from a tuple
k = (1, 3, 5, 7)
print("Current tuple")
print(k)
print(type(k))

j = list(k)
j.append(int(input("Enter your new value: ")))
m = tuple(j)
print("updated tuple")
print(m)

#Example
mylist = list(map(int, input("Enter the list values:").split()))
myset = set(map(int, input("Enter the set values:").split()))
print(mylist)
print(type(mylist))
print(myset)
print(type(myset))